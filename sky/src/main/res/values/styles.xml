<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
        <style name="MyAppTheme.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>

        <style name="MyAppTheme.TextAppearance">
            <item name="android:textColor">@color/text</item>
            <item name="android:textSize">16sp</item>
        </style>
            <style name="MyAppTheme.TextAppearance.Small">
                <item name="android:textColor">@color/text_light</item>
                <item name="android:textSize">14sp</item>
            </style>
                <style name="MyAppTheme.TextAppearance.CategoryTitle" parent="MyAppTheme.TextAppearance.Small">
                    <item name="android:textColor">@color/accent</item>
                    <item name="android:textStyle">bold</item>
                </style>


        <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
