<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"

    tools:context="net.byloth.sky.fragments.SummaryFragment">

    <TextView
        android:id="@+id/user_position_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/user_position"
        android:textAppearance="@style/MyAppTheme.TextAppearance.CategoryTitle" />

    <LinearLayout
        android:id="@+id/lat_fields_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_position_title"
        android:layout_marginBottom="@dimen/text_vertical_margin"
        android:layout_marginTop="@dimen/text_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            android:text="@string/lat_field"
            android:textAppearance="@style/MyAppTheme.TextAppearance" />

        <TextView
            android:id="@+id/lat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textAppearance="@style/MyAppTheme.TextAppearance" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lng_fields_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lat_fields_container"
        android:layout_marginBottom="@dimen/text_vertical_margin"
        android:layout_marginTop="@dimen/text_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lng_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            android:text="@string/lng_field"
            android:textAppearance="@style/MyAppTheme.TextAppearance" />

        <TextView
            android:id="@+id/lng_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textAppearance="@style/MyAppTheme.TextAppearance" />

    </LinearLayout>

</RelativeLayout>
